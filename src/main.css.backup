/* * {
    margin: 0;
} */

html,
body {
    height: 100%;
}

body {
    background-color: #f3f3f3;
    /* font-family: 'Open Sans', sans-serif; */
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: rgba(0, 0, 0, 0.877);
    width: 90%;
    margin: 0 auto;
    text-align: center;
}

/* Preview and Quality Metrics Container */
.preview-quality-container {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 20px;
    margin: 20px auto;
    flex-wrap: wrap;
}

/* Preview Section */
.preview-section {
    flex: 1;
    min-width: 280px;
    max-width: 400px;
}

.video-container {
    position: relative;
    width: 100%;
    max-width: 320px;
    margin: 0 auto;
    border: 3px solid #333;
    border-radius: 12px;
    overflow: hidden;
    background-color: #000;
    transform: translateZ(0);
    will-change: transform;
}

#video {
    width: 100%;
    height: auto;
    display: block;
}

/* Finger Placement Guide Overlay */
.finger-guide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    pointer-events: none;
}

.guide-circle {
    width: 100px;
    height: 100px;
    border: 3px dashed rgba(255, 255, 255, 0.7);
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
    transition: all 0.5s ease;
}

/* Circle color states based on signal quality */
.guide-circle.excellent {
    background-color: rgba(76, 175, 80, 0.5);
    border-color: #4CAF50;
    border-style: solid;
    box-shadow: 0 0 20px rgba(76, 175, 80, 0.8);
}

.guide-circle.good {
    background-color: rgba(139, 195, 74, 0.5);
    border-color: #8BC34A;
    border-style: solid;
    box-shadow: 0 0 15px rgba(139, 195, 74, 0.6);
}

.guide-circle.fair {
    background-color: rgba(255, 193, 7, 0.5);
    border-color: #FFC107;
    border-style: solid;
}

.guide-circle.poor {
    background-color: rgba(244, 67, 54, 0.3);
    border-color: #F44336;
    border-style: dashed;
}

.guide-text {
    margin-top: 10px;
    color: white;
    font-size: 14px;
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.8);
    font-weight: bold;
}

/* Quality Metrics Section */
.quality-section {
    flex: 1;
    min-width: 280px;
    max-width: 400px;
    padding: 20px;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.quality-section h3 {
    margin-top: 0;
    margin-bottom: 15px;
    font-size: 18px;
    color: #333;
}

.quality-metric {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 0;
    border-bottom: 1px solid #eee;
}

.metric-label {
    font-size: 14px;
    color: #666;
    font-weight: 500;
}

.metric-value {
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

/* Quality Status - Color Coded */
.quality-status {
    margin-top: 15px;
    padding: 12px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    transition: all 0.3s ease;
}

/* Status color variations (will be set via JS) */
.quality-status.excellent {
    background-color: #4CAF50;
    color: white;
    animation: pulse 2s infinite;
}

.quality-status.good {
    background-color: #8BC34A;
    color: white;
}

.quality-status.fair {
    background-color: #FFC107;
    color: #333;
}

.quality-status.poor {
    background-color: #F44336;
    color: white;
}

.quality-status.initializing {
    background-color: #9E9E9E;
    color: white;
}

/* Pulsing animation for good signal */
@keyframes pulse {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.9;
        transform: scale(1.02);
    }
}

/* Guidance Message */
.guidance-message {
    margin-top: 15px;
    padding: 10px;
    background-color: #E3F2FD;
    border-left: 4px solid #2196F3;
    border-radius: 4px;
    font-size: 14px;
    color: #1976D2;
    text-align: left;
    font-weight: 500;
}

/* Chart */
#chart {
    /* max-width: 600px;
    max-height: 400px; */
    width: 100%;
    margin: 20px auto;
    text-align: center;
    background-color: #f3f3f3;
}

/* Technical Info - Less Prominent */
.technical-info {
    margin-top: 20px;
    padding: 10px;
    background-color: #fff;
    border-radius: 8px;
    font-size: 12px;
    color: #666;
    text-align: left;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.technical-info summary {
    cursor: pointer;
    font-weight: bold;
    padding: 5px;
    user-select: none;
}

.technical-info p {
    margin: 5px 0;
    padding-left: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .preview-quality-container {
        flex-direction: column;
        align-items: center;
    }

    .preview-section,
    .quality-section {
        max-width: 100%;
        width: 100%;
    }

    .video-container {
        max-width: 100%;
    }
}